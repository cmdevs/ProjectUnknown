<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewmodel"
            type="com.cmdevs.projectunknown.viewmodels.LoginViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/tvJoinEmailMent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/googleSignButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/ic_google_64"
                android:onClick="@{() -> viewmodel.googleSignClick()}"
                android:text="google"
                android:textAlignment="center"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/facebookSignButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/ic_facebook_64"
                android:text="facebook"
                android:textAlignment="center"
                android:textSize="20dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvEmailSign"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/ic_email_64"
                android:onClick="@{() -> viewmodel.emailEvent(viewmodel.signTitle)}"
                android:text="email"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvJoinEmailMent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="이메일 계정이 없으신가요?"
            android:textSize="15dp"
            android:onClick="@{() -> viewmodel.emailEvent(viewmodel.joinTitle)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    </android.support.constraint.ConstraintLayout>

</layout>

